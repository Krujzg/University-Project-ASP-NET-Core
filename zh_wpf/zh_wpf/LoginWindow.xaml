<Window x:Class="zh_wpf.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zh_wpf"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="Username" Background="Orange" Margin="10 5 10 5" Padding="5" />
        <TextBox x:Name="tb_username" Margin="10 5 10 5" Padding="5"  Text="vendeg@gmail.com"/>

        <Label Content="Password" Background="Orange" Margin="10 5 10 5" Padding="5" />
        <PasswordBox x:Name="tb_password" Margin="10 5 10 5" Padding="5" Password="almafa"/>

        <Button Content="Login" Margin="10 5 10 5" Padding="5" Click="Button_Click" />
    </StackPanel>
</Window>
